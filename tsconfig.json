{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",

    /* Language and Environment */
    "target": "es2016",

    /* Modules */
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true,

    /* Paths */
    "typeRoots": ["./types", "./node_modules/@types"]
  },
}
